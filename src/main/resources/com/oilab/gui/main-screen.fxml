<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      prefHeight="400.0" prefWidth="600.0" spacing="32.0" xmlns="http://javafx.com/javafx/11.0.2"
      fx:controller="com.oilab.gui.HelloController"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label text="Rupee to Dollar" textAlignment="CENTER">
            <font>
                <Font name="Arial" size="20.0"/>
            </font>
        </Label>
        <TextField fx:id="rupeeField" maxWidth="90.0" minWidth="60.0" prefWidth="60.0" promptText="Indian rupee"/>
        <Button fx:id="convertButton" mnemonicParsing="false" text="Convert" onAction="#handleButtonAction"/>
        <Label fx:id="dollarLabel" textAlignment="CENTER">
            <font>
                <Font name="Arial" size="20.0"/>
            </font>
        </Label>
    </children>
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <padding>
        <Insets bottom="32.0" left="32.0" right="32.0" top="32.0"/>
    </padding>
</VBox>
